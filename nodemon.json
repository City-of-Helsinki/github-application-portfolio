{
  "watch": [
    "server.js",
    "src/",
    "views/",
    "scripts/"
  ],
  "ext": "js,json,ejs",
  "ignore": [
    "node_modules/",
    "*.log",
    ".git/",
    "public/",
    "repositories.yml",
    "*.md",
    "docs/"
  ],
  "delay": "1000",
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  }
}

