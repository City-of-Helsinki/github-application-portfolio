<aside class="w-64 bg-white dark:bg-background-dark border-r border-slate-200 dark:border-slate-800 p-4 flex flex-col justify-between">
  <div>
    <div class="flex justify-center mb-8 px-4">
      <img src="data:image/svg+xml;base64," alt="Helsingin kaupunki" class="w-full h-auto max-w-full">
    </div>
    <div class="flex flex-col mb-8">
      <h1 class="text-[#0d141c] dark:text-white text-base font-medium leading-normal">Sovellusportfolio</h1>
      <p class="text-[#49739c] dark:text-slate-400 text-sm font-normal leading-normal">GitHub</p>
    </div>
    <nav class="flex flex-col gap-2">
      <% navigationItems.forEach(function(item) { %>
        <% const isActive = currentPath === item.path; %>
        <% const linkClass = isActive ? 'flex items-center gap-4 px-3 py-2 rounded-lg bg-primary/10 text-primary' : 'flex items-center gap-4 px-3 py-2 text-[#0d141c] dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg'; %>
        <a class="<%= linkClass %>" href="<%= item.path %>">
          <span class="material-symbols-outlined"><%= item.icon %></span>
          <p class="text-sm font-medium"><%= item.name %></p>
        </a>
      <% }); %>
    </nav>
  </div>
  <div class="mt-auto">
    <% const isSettingsActive = currentPath === settingsItem.path; %>
    <% const settingsClass = isSettingsActive ? 'flex items-center gap-4 px-3 py-2 rounded-lg bg-primary/10 text-primary' : 'flex items-center gap-4 px-3 py-2 text-[#0d141c] dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg'; %>
    <a class="<%= settingsClass %>" href="<%= settingsItem.path %>">
      <span class="material-symbols-outlined"><%= settingsItem.icon %></span>
      <p class="text-sm font-medium"><%= settingsItem.name %></p>
    </a>
  </div>
</aside>

