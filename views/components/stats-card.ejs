<% 
// Stats card component
// Usage: <%- include('components/stats-card', { title: 'Title', value: '123', subtitle: 'Subtitle', icon: 'dashboard', color: 'blue' }) %>
const cardTitle = typeof title !== 'undefined' ? title : '';
const cardValue = typeof value !== 'undefined' ? value : '0';
const cardSubtitle = typeof subtitle !== 'undefined' ? subtitle : '';
const cardIcon = typeof icon !== 'undefined' ? icon : '';
const cardColor = typeof color !== 'undefined' ? color : 'primary';
const cardBorderColor = typeof borderColor !== 'undefined' ? borderColor : '';
const cardClass = typeof cardClass !== 'undefined' ? cardClass : '';
%>
<div class="flex flex-col gap-2 rounded-xl p-6 border <%= cardBorderColor || 'border-slate-200 dark:border-slate-800' %> bg-white dark:bg-slate-900 <%= cardClass %>">
    <% if (cardIcon) { %>
    <div class="flex items-center gap-2 mb-2">
        <span class="material-symbols-outlined text-<%= cardColor %>-600"><%= cardIcon %></span>
        <p class="text-base font-medium text-[#0d141c] dark:text-slate-300"><%= cardTitle %></p>
    </div>
    <% } else { %>
    <p class="text-base font-medium text-[#0d141c] dark:text-slate-300"><%= cardTitle %></p>
    <% } %>
    <p class="text-3xl font-bold text-[#0d141c] dark:text-white"><%= cardValue %></p>
    <% if (cardSubtitle) { %>
    <p class="text-sm font-medium text-slate-500 dark:text-slate-400"><%= cardSubtitle %></p>
    <% } %>
</div>

