# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=City-of-Helsinki

# Rate Limiting Configuration
# Set to 'false' to disable rate limiting completely (for development/testing)
RATE_LIMIT_ENABLED=true

# Set to 'true' to enable debug logging for rate limiting
RATE_LIMIT_DEBUG=false

# Server Configuration
PORT=3000

# Testing Configuration
# Limit the number of repositories for testing (set to number or leave empty for no limit)
# Example: MAX_REPOSITORIES=10 will only process first 10 repositories
MAX_REPOSITORIES=

# Database Configuration
# Set to 'false' to disable database (uses in-memory cache instead)
# When disabled, repository data won't persist between server restarts
USE_DATABASE=true